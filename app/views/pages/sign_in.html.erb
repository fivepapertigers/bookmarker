<div class="page-header text-center bg-white">
  <h1>Welcome to Bookmarker</h1>
  <p class="text-muted uppercase lead">Store and tag all of your bookmarks!</p>
</div>
<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>
<div class='row'>
  <div class='col col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-3'>
    <div class='jumbotron text-center'>
      <h2>Sign in using a service below</h2>
      <ul class='list-inline'>
        <li>
          <%= link_to "/auth/github" do%>
            <button type="button" class="btn btn-default btn-lg" aria-label="Left Align">
              <%= fa_icon("github-alt") %> Github
            </button>
          <%end %>
        </li>
      </ul>
    </div>
  </div>
</div>